<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".settings.FragmentChangePassword">

    <TextView
        android:id="@+id/tv_current_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:minLines="1"
        android:text="@string/current_password"
        android:textColor="@color/black"
        android:textSize="@dimen/standard_text_size_tab"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:id="@+id/et_current_password"
        android:textSize="@dimen/standard_text_size_tab"
        android:inputType="textPassword"
        android:fontFamily="@font/poppins_regular"
        android:backgroundTint="@color/color_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_current_password" />

    <TextView
        android:id="@+id/tv_new_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:minLines="1"
        android:text="@string/new_password"
        android:textColor="@color/black"
        android:textSize="@dimen/standard_text_size_tab"
        android:layout_marginTop="@dimen/margin_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_current_password" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:id="@+id/et_new_password"
        android:textSize="@dimen/standard_text_size_tab"
        android:inputType="textPassword"
        android:fontFamily="@font/poppins_regular"
        android:backgroundTint="@color/color_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_new_password" />

    <TextView
        android:id="@+id/tv_confirm_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:minLines="1"
        android:text="@string/confirm_password"
        android:textColor="@color/black"
        android:textSize="@dimen/standard_text_size_tab"
        android:layout_marginTop="@dimen/margin_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_new_password" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:id="@+id/et_confirm_password"
        android:textSize="@dimen/standard_text_size_tab"
        android:inputType="textPassword"
        android:fontFamily="@font/poppins_regular"
        android:backgroundTint="@color/color_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_confirm_password" />

    <Button
        android:id="@+id/btn_change_password"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:background="@drawable/orange_rounded_btn_shape_15dp"
        android:fontFamily="@font/poppins_regular"
        android:hint="@string/change_password"
        android:paddingStart="16dp"
        android:paddingTop="3dp"
        android:paddingEnd="16dp"
        android:textColor="@color/black"
        android:textColorHint="@color/white"
        android:textSize="@dimen/standard_text_size_tab"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_confirm_password" />
</androidx.constraintlayout.widget.ConstraintLayout>