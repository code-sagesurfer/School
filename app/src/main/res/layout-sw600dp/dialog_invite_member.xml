<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:cardCornerRadius="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp"
        >

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/invite_member_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginStart="24dp"
            android:src="@drawable/invite_member"
            app:layout_constraintBottom_toBottomOf="@+id/imageView7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/invite_member"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView8"
            app:layout_constraintStart_toEndOf="@+id/imageView8"
            app:layout_constraintTop_toTopOf="@+id/imageView8" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="76dp"
            android:layout_height="130dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/invite_member_icon"
            app:layout_constraintBottom_toBottomOf="@+id/imageView7"
            app:layout_constraintEnd_toEndOf="@+id/imageView7"
            app:layout_constraintStart_toEndOf="@+id/textView2"
             />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_background_blue_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView7" />

        <View
            android:id="@+id/view_new_user"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/rounded_background_tab_btn_blue"
            app:layout_constraintBottom_toBottomOf="@+id/view3"
            app:layout_constraintEnd_toStartOf="@+id/viewPlatRegUser"
            app:layout_constraintStart_toStartOf="@+id/view3"
            app:layout_constraintTop_toTopOf="@+id/view3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_user"
            android:textSize="18sp"
            android:id="@+id/tv_new_user"
            app:layout_constraintBottom_toBottomOf="@+id/view_new_user"
            app:layout_constraintEnd_toEndOf="@+id/view_new_user"
            app:layout_constraintStart_toStartOf="@+id/view_new_user"
            app:layout_constraintTop_toTopOf="@+id/view_new_user" />


        <View
            android:id="@+id/viewPlatRegUser"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_background_tab_btn_blue"
            app:layout_constraintBottom_toBottomOf="@+id/view3"
            app:layout_constraintEnd_toEndOf="@+id/view3"
            app:layout_constraintTop_toTopOf="@+id/view3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/platform_reg_user"
            android:textSize="18sp"
            android:id="@+id/tv_platform_user"
            app:layout_constraintBottom_toBottomOf="@+id/viewPlatRegUser"
            app:layout_constraintEnd_toEndOf="@+id/viewPlatRegUser"
            app:layout_constraintStart_toStartOf="@+id/viewPlatRegUser"
            app:layout_constraintTop_toTopOf="@+id/viewPlatRegUser" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/role_name"
            android:textSize="16sp"
            android:id="@+id/txt_role_name"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"

            android:textColor="@color/text_hint_color2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view3" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:text="@string/role_name"
            android:textSize="12sp"

            app:layout_constraintStart_toEndOf="@+id/txt_role_name"
            app:layout_constraintTop_toBottomOf="@+id/view3" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/cl_role"
            android:paddingStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/team_listing_item_border_color_primary"
            app:layout_constraintTop_toBottomOf="@+id/txt_role_name">

            <Spinner
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/sp_role"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageView18"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bottom_arrow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_block_new_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:visibility="visible"
            android:paddingBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_role">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username_"
               android:id="@+id/tv_name_txt"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/text_hint_color2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:id="@+id/ll_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_name_txt"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:background="@drawable/team_listing_item_border_color_primary"
                    android:hint="@string/first_name"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:paddingTop="3dp"
                    android:textSize="16sp"
                    android:layout_marginEnd="@dimen/margin_8"
                    android:textColorHint="@color/black"
                    android:id="@+id/et_first_name"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:background="@drawable/team_listing_item_border_color_primary"
                    android:hint="@string/last_name"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:paddingTop="3dp"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"
                    android:textColorHint="@color/black"
                    android:id="@+id/et_last_name"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_email"
                android:id="@+id/tv_email_txt"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/text_hint_color2"
                app:layout_constraintTop_toBottomOf="@+id/ll_name"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:background="@drawable/team_listing_item_border_color_primary"
                android:fontFamily="@font/poppins_regular"
                android:hint="@string/email"
                android:paddingStart="16dp"
                android:paddingTop="3dp"
                android:paddingEnd="16dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/tv_email_txt" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_block_register_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_role">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/team_listing_item_border_color_primary"
                android:hint="@string/search_user"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:paddingTop="3dp"
                android:textSize="16sp"
                android:drawableEnd="@drawable/search"
                android:textColorHint="@color/black"
                android:id="@+id/et_search_user"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:id="@+id/ll_buttons"

            app:layout_constraintTop_toBottomOf="@+id/cl_block_new_user"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner_btn_cancel"
                android:hint="@string/cancel"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:paddingTop="3dp"
                android:textSize="16sp"
                android:layout_margin="2dp"
                android:textColorHint="@color/black"
                android:id="@+id/btn_cancel"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:background="@drawable/orange_rounded_btn_shape_15dp"
                android:hint="@string/invite"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:paddingTop="3dp"
                android:textSize="16sp"
                android:layout_margin="2dp"
                android:layout_marginStart="3dp"
                android:textColorHint="@color/white"
                android:id="@+id/btn_invite"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>