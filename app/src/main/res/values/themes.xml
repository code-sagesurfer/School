<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.School" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>

        <item name="color">@android:color/black</item>
    </style>

    <style name="Theme.School.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.School.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.School.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTabTextAppearance_one" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>
    <style name="popupMenuStylenew">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:divider">@color/color_primary</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:popupElevation">20dp</item>
        <item name="borderWidth">1dp</item>
        <item name="android:elevation">2dp</item>
        <item name="elevation">2dp</item>
        <!--        <item name="android:background">@drawable/white_rounded</item>-->
        <!--        <item name="android:itemBackground">@drawable/bottom_border_thick</item>-->
        <!--        <item name="android:popupBackground">@drawable/white_rounded_rectangle_gray_border</item>-->
    </style>

</resources>