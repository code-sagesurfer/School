<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".settings.FragmentChangePassword">

    <TextView
        android:id="@+id/tv_current_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:minLines="1"
        android:text="@string/current_password"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/black"
        android:id="@+id/et_current_password"
        android:textSize="14sp"
        android:background="@android:color/transparent"
        android:inputType="textPassword"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintEnd_toStartOf="@+id/btn_password_toggle1"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_current_password" />

    <ImageView
        android:id="@+id/btn_password_toggle1"
        android:layout_width="26dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_password"

        app:layout_constraintBottom_toBottomOf="@+id/et_current_password"
        app:layout_constraintEnd_toEndOf="@+id/et_current_password"
        app:layout_constraintTop_toTopOf="@+id/et_current_password" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/v1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/color_primary"
        app:layout_constraintTop_toBottomOf="@+id/et_current_password"/>
    <TextView
        android:id="@+id/tv_new_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:minLines="1"
        android:text="@string/new_password"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/margin_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v1" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/black"
        android:id="@+id/et_new_password"
        android:textSize="14sp"
        android:background="@android:color/transparent"
        android:inputType="textPassword"
        android:fontFamily="@font/poppins_regular"
        android:backgroundTint="@color/color_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_new_password" />

    <ImageView
        android:id="@+id/btn_password_toggle2"
        android:layout_width="26dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_password"

        app:layout_constraintBottom_toBottomOf="@+id/et_new_password"
        app:layout_constraintEnd_toEndOf="@+id/et_new_password"
        app:layout_constraintTop_toTopOf="@+id/et_new_password" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/v2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/color_primary"
        app:layout_constraintTop_toBottomOf="@+id/et_new_password"/>

    <TextView
        android:id="@+id/tv_confirm_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:minLines="1"
        android:text="@string/confirm_password"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/margin_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v2" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/black"
        android:id="@+id/et_confirm_password"
        android:textSize="14sp"
        android:background="@android:color/transparent"
        android:inputType="textPassword"
        android:fontFamily="@font/poppins_regular"
        android:backgroundTint="@color/color_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_confirm_password" />

    <ImageView
        android:id="@+id/btn_password_toggle3"
        android:layout_width="26dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_password"

        app:layout_constraintBottom_toBottomOf="@+id/et_confirm_password"
        app:layout_constraintEnd_toEndOf="@+id/et_confirm_password"
        app:layout_constraintTop_toTopOf="@+id/et_confirm_password" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/v3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/color_primary"
        app:layout_constraintTop_toBottomOf="@+id/et_confirm_password"/>

    <Button
        android:id="@+id/btn_change_password"
        android:layout_width="match_parent"
        android:layout_height="38dp"

        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:background="@drawable/orange_rounded_btn_shape_15dp"
        android:fontFamily="@font/poppins_regular"
        android:hint="@string/change_password"
        android:paddingStart="16dp"
        android:paddingTop="3dp"
        android:paddingEnd="16dp"
        android:textColor="@color/black"
        android:textColorHint="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v3" />
</androidx.constraintlayout.widget.ConstraintLayout>