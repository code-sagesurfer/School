                </androidx.constraintlayout.widget.ConstraintLayout>-->


                <EditText
                    android:id="@+id/et_reg_email"
                    android:layout_width="match_parent"

                    android:layout_height="55dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/light_orange_rounded_shape"


                    android:fontFamily="@font/poppins_regular"
                    android:hint="@string/email_id"
                    android:paddingStart="24dp"

                    android:paddingEnd="24dp"
                    android:textColorHint="@color/text_hint_color"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_reg_last_name" />

                <EditText
                    android:id="@+id/et_reg_dob"
                    android:layout_width="match_parent"

                    android:layout_height="55dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/light_orange_rounded_shape"


                    android:fontFamily="@font/poppins_regular"
                    android:hint="@string/date_of_birth"
                    android:paddingStart="24dp"

                    android:paddingEnd="24dp"
                    android:textColorHint="@color/text_hint_color"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_reg_email" />

                <CheckBox
                    android:id="@+id/cb_reg_terms_and_conditions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/accept_terms"
                    android:textColor="@color/text_hint_color"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_reg_dob" />


                <TextView
                    android:id="@+id/btn_reg_submit"
                    android:layout_width="match_parent"

                    android:layout_height="55dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/orange_rounded_btn_shape_15dp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:text="@string/submit"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cb_reg_terms_and_conditions" />

                <TextView
                    android:id="@+id/btn_reg_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/light_orange_rounded_shape"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_reg_submit" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>