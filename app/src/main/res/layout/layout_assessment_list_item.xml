<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="161dp"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp"
    android:layout_margin="3dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <ImageView
            android:id="@+id/iv_form_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/image_test"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />



        <View
            android:id="@+id/view6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#41337A4F" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/demo_text"
            android:id="@+id/tv_heading_text"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="@dimen/size_margin_16"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bottom_corner_rounded_assessment"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_form_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <TextView
                android:id="@+id/txt_title"
                android:layout_width="0dp"
                android:layout_height="18dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/poppins_regular"
                android:text="PHQ9"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


           <!-- <ImageView
                android:id="@+id/imageView17"
                android:layout_width="25dp"
                android:layout_height="16dp"
                android:layout_marginEnd="1dp"
                android:background="@drawable/left_corner_rounded"
                app:layout_constraintBottom_toBottomOf="@+id/txt_title"
                app:layout_constraintEnd_toStartOf="@+id/imageView18"
                app:layout_constraintTop_toTopOf="@+id/txt_title" />

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="25dp"
                android:layout_height="16dp"
                android:background="@drawable/right_corner_rounded"
                app:layout_constraintBottom_toBottomOf="@+id/txt_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txt_title" />-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:text="@string/last_score"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_light"
                app:layout_constraintTop_toBottomOf="@+id/txt_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"

                android:textSize="14sp"
                android:id="@+id/txt_last_score"
                android:layout_marginEnd="@dimen/margin_8"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:text="@string/demo_date"
                android:textColor="@color/color_primary"
                android:fontFamily="@font/poppins_light"
                app:layout_constraintTop_toBottomOf="@+id/txt_last_score"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"

                android:textSize="11sp"
                android:id="@+id/txt_date"
                android:layout_marginEnd="@dimen/margin_8"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>