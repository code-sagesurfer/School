<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".settings.FragmentSettings">

    <TextView
        android:id="@+id/tv_edit_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:minLines="1"
        android:text="@string/edit_profile"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="5dp"
        android:layout_height="10dp"
        android:background="@drawable/arrow_left"
        android:backgroundTint="@color/blue_arrow_settings"
        app:layout_constraintBottom_toBottomOf="@+id/tv_edit_profile"
        app:layout_constraintEnd_toEndOf="@+id/tv_edit_profile"
        app:layout_constraintTop_toTopOf="@+id/tv_edit_profile" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/v1"
        android:layout_marginTop="@dimen/margin_12"
        android:background="@color/color_primary"
        app:layout_constraintTop_toBottomOf="@+id/tv_edit_profile"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/tv_change_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:minLines="1"
        android:text="@string/change_password"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/margin_12"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v1" />

    <ImageView
        android:layout_width="5dp"
        android:layout_height="10dp"
        android:id="@+id/iv_arrow_2"
        android:background="@drawable/arrow_left"
        android:backgroundTint="@color/blue_arrow_settings"
        app:layout_constraintBottom_toBottomOf="@+id/tv_change_password"
        app:layout_constraintEnd_toEndOf="@+id/tv_change_password"
        app:layout_constraintTop_toTopOf="@+id/tv_change_password" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/v2"
        android:layout_marginTop="@dimen/margin_12"
        android:background="@color/color_primary"
        app:layout_constraintTop_toBottomOf="@+id/tv_change_password"
        tools:layout_editor_absoluteX="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>